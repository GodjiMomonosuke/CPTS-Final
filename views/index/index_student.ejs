                                                // No valid highest score, use Rookie
                                                characterName = "Rookie";
                                                imageNumber = "5";
                                                altText = "Rookie";
                                            }
                                        }
                                    } 
                                    // 3. Only if all else fails, use Rookie character
                                    else {
                                        characterName = "Rookie";
                                        imageNumber = "5";
                                        altText = "Rookie";
                                    }
                                    
                                    // Get image path with fallback support
                                    const primaryImagePath = `${basePaths[0]}/${imageNumber}.png`;
                                    
                                    // Format total score display - show actual values including any NaN
                                    const displayScores = [
                                        isBasicNaN ? "NaN" : originalBasic,
                                        isTraceNaN ? "NaN" : originalTrace,
